<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.Settings"
    android:background="#3C404A">


    <Button
        android:id="@+id/buttonReminderTime"
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/settings_button_reminder"
        android:fontFamily="@font/ubuntu_light"
        android:textColor="@color/colorPrikolniy" />

    <Button
        android:id="@+id/buttonManageAccount"
        android:layout_marginTop="-10dp"
        android:layout_below="@+id/buttonReminderTime"
        android:layout_width="390dp"
        android:background="@drawable/settings_button_manage"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrikolniy"/>

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonManageAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:background="@drawable/settings_button_about"
        android:textColor="@color/colorPrikolniy" />


</RelativeLayout>