<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.Settings"
    android:background="#3C404A">


    <Button
        android:id="@+id/buttonReminderTime"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/reminder_button"

        android:fontFamily="@font/ubuntu_light"
        android:text="Minutes before reminder"
        android:textColor="@color/colorPrikolniy"/>

    <Button
        android:id="@+id/buttonManageAccount"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/buttonReminderTime"
        android:layout_width="360dp"
        android:background="@drawable/user_button"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/ubuntu_light"
        android:text="MANAGE ACCOUNT"
        android:textColor="@color/colorPrikolniy"/>

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonManageAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/window_about"

        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@android:anim/slide_in_left"
        android:text="about"
        android:textColor="@color/colorPrikolniy" />


</RelativeLayout>