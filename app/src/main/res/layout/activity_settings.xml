<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.Settings"
    android:background="#3C404A">


    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/buttonReminderTime"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:sparkbutton_activeImage="@drawable/settings_button_reminder"
        app:sparkbutton_iconSize="365dp"
        android:fontFamily="@font/ubuntu_light"
        android:textColor="@color/colorPrikolniy" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/buttonManageAccount"
        android:layout_marginTop="-10dp"
        android:layout_below="@+id/buttonReminderTime"
        android:layout_width="350dp"
        app:sparkbutton_activeImage="@drawable/settings_button_manage"
        android:layout_height="70dp"
        app:sparkbutton_iconSize="365dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrikolniy"/>

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/buttonAbout"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@+id/buttonManageAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        app:sparkbutton_iconSize="365dp"
        app:sparkbutton_activeImage="@drawable/settings_button_about"
        android:textColor="@color/colorPrikolniy"
        app:sparkbutton_animationSpeed="5"/>


</RelativeLayout>