<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C404A"
    tools:context=".home_page.HomeFragment">

    <!--
        app:srcCompat="@android:drawable/ic_input_add"-->


    <!--    <ListView
        android:id="@+id/dayList"
        android:layout_width="316dp"
        android:layout_height="307dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />-->

    <FrameLayout
        android:id="@+id/dayFrame"
        android:layout_width="316dp"
        android:layout_height="307dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/main_task_window"
        android:scrollbars="none">

        <ListView
            android:id="@+id/dayList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="9dp"
            android:layout_marginVertical="7dp"
            android:scrollbars="none" />
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fastAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="14dp"
        app:backgroundTint="#272B34"
        app:srcCompat="@drawable/plusik1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/slowAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="74dp"
        app:backgroundTint="#272B34"
        app:srcCompat="@color/colorButton" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/trashik"
        android:text="" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dateBand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/dayFrame"/>


</RelativeLayout>