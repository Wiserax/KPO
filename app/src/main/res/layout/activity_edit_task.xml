<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/buttonChangeDate"

        android:layout_width="119dp"
        android:layout_height="32dp"
        android:background="@drawable/fields"
        android:fontFamily="sans-serif-medium"
        android:text="Date"
        android:textAllCaps="false"
        android:textColor="#C8000000"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="189dp" />

    <Button
        android:id="@+id/buttonChangeTime"

        android:layout_width="101dp"
        android:layout_height="30dp"
        android:background="@drawable/fields"
        android:fontFamily="sans-serif-medium"
        android:text="Time"
        android:textAllCaps="false"
        android:textColor="#C8000000"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="189dp" />

    <TextView
        android:id="@+id/taskDescr"
        android:layout_width="322dp"
        android:layout_height="41dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="130dp" />

    <Button
        android:id="@+id/saveTaskButton"

        android:layout_width="86dp"
        android:layout_height="32dp"
        android:layout_marginStart="290dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/fields"
        android:fontFamily="sans-serif-medium"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#C8000000"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancelTaskButton"

        android:layout_width="86dp"
        android:layout_height="32dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/fields"
        android:fontFamily="sans-serif-medium"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#C8000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveTaskButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:text="Here is your task"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp" />

    <ImageView
        android:id="@+id/descrIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="130dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_agenda"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="190dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="31dp"
        android:layout_height="31dp"
        app:srcCompat="@android:drawable/star_off"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="250dp" />

    <Spinner
        android:id="@+id/spinnerTaskPriority"
        android:layout_width="309dp"
        android:layout_height="34dp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="250dp" />

</androidx.constraintlayout.widget.ConstraintLayout>