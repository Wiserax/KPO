<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <EditText
        android:id="@+id/taskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:cursorVisible="false"
        android:text="Here is your task"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrikolniy"
        android:textSize="30sp"
        android:textStyle="bold|italic" />


    <ImageView
        android:id="@+id/descrIcon"
        android:layout_below="@id/taskTitle"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"/>

    <EditText
        android:id="@+id/taskDes"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/taskTitle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@id/descrIcon"
        android:background="@null"
        android:cursorVisible="false"
        android:ems="10"
        android:fontFamily="@font/ubuntu_light"
        android:hint="Add details"
        android:textColor="@color/colorPrikolniy"
        android:textColorHighlight="@color/colorPrikolniy"
        android:textColorHint="@color/colorPrikolniy" />


    <ImageView
        android:id="@+id/buttonIcon"
        android:layout_below="@id/taskDes"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_agenda" />

    <Button
        android:id="@+id/buttonChangeDate"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@id/taskDes"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/buttonIcon"
        android:background="@drawable/window_settings"
        android:fontFamily="sans-serif-medium"
        android:text="Date"
        android:textAllCaps="false"
        android:textColor="@color/colorPrikolniy"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonChangeTime"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@id/taskDes"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/buttonChangeDate"
        android:background="@drawable/window_settings"
        android:fontFamily="sans-serif-medium"
        android:text="Time"
        android:textAllCaps="false"
        android:textColor="@color/colorPrikolniy"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/priorityIcon"
        android:layout_below="@id/buttonIcon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_off" />


    <Spinner
        android:id="@+id/spinnerTaskPriority"
        android:layout_below="@id/buttonIcon"
        style="@style/MyDarkToolbarStyle"
        android:layout_toEndOf="@id/priorityIcon"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>


    <CheckBox
        android:id="@+id/alarmCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/priorityIcon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:alpha="0.8"
        android:checked="true"
        android:text="      Alarm"
        android:textColor="@color/colorPrikolniy"
        android:textSize="18sp" />

    <Button
        android:id="@+id/markAsCompleteButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/save"
        android:textAllCaps="false"
        android:background="@drawable/window_settings"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@android:anim/slide_in_left"
        android:textColor="@color/colorPrikolniy"
        android:textSize="24sp"/>

</RelativeLayout>